<header class="flex flex-wrap items-center justify-between gap-6 mb-10">
  <a href="/" class="flex items-center gap-4 hover:opacity-90 transition">
    <div
      class="w-14 h-14 rounded-2xl bg-gradient-to-br from-neon to-highlight/70 flex items-center justify-center text-night text-2xl font-semibold shadow-glow"
    >
      <i class="fa-solid fa-waveform"></i>
    </div>
    <div>
      <p class="text-sm uppercase tracking-[0.5em] text-white/50">Música</p>
      <h1 class="text-3xl font-semibold">Plataforma</h1>
    </div>
  </a>
  <% if (user) { %>
    <div class="flex items-center gap-4">
      <div class="text-right">
        <p class="text-white/60 text-xs uppercase tracking-[0.4em]">Olá</p>
        <p class="text-xl font-semibold"><%= user.nome %></p>
      </div>
      <img
        src="https://placehold.co/56x56"
        alt="Avatar"
        class="w-14 h-14 rounded-full border border-white/10"
      />
    </div>
  <% } else { %>
    <a
      href="/login"
      class="px-4 py-2 rounded-full border border-white/10 text-sm text-white hover:border-white/40 transition"
    >
      Entrar
    </a>
  <% } %>
</header>
